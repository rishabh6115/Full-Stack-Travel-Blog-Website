<% layout('layouts/boilerplate') %>
    <style>
        .username {
            display: none;
        }
    </style>

    <div class="row">
        <h1 class="text-center">Forgot Password</h1>
        <div class="col-6 offset-3">
            <form action="/validatepassword" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="oldpassword">Enter Your Old password</label>
                    <input class="form-control" type="password" id="oldpassword" name="password" required>

                </div>

                <input class="username" type="text" name="username" value="<%= user.username%>">


                <button class="btn btn-sm btn-success">Submit</button>
            </form>
        </div>
    </div>