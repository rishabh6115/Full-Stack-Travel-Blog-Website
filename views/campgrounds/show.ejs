<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-6">

            <div class="card mb-3">
                <img src="<%= campgrounds.image%>" class="card-img-top" alt="..." />
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campgrounds.title%>
                    </h5>
                    <p class="card-text">
                        <%= campgrounds.description%>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= campgrounds.location%>
                    </li>
                    <li class="list-group-item ">
                        Submitted By <%= campgrounds.author.username%>
                    </li>

                    <li class="list-group-item">â‚¹ <%= campgrounds.price%>/night</li>
                </ul>
                <% if(user && campgrounds.author.equals(user)){%>
                    <div class="card-body">
                        <a class="card-link btn btn-info" href="/campgrounds/<%=campgrounds._id%>/edit">Edit</a>
                        <form class="d-inline" action="/campgrounds/<%=campgrounds._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                    <% } %>

                        <div class="card-footer text-muted">2 days ago</div>

            </div>

        </div>

        <div class="col-6">
            <% if(user){ %>
                <h2>Leave A Review</h2>
                <form action="/campgrounds/<%= campgrounds._id %>/reviews " method="POST" class="mb-3 validated-form"
                    novalidate>
                    <div class="mb-3">
                        <label class="form-label" for="rating">Rating</label>
                        <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="body">Review</label>
                        <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3"
                            required></textarea>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                    </div>
                    <button class="btn btn-success">Sumbit</button>
                </form>
                <% } %>



                    <% for(let c of campgrounds.reviews){ %>
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Rating:<%= c.rating %>
                                </h5>
                                <h6 class="card-subtitle mb-2 text-muted">
                                    <%= c.author.username %>
                                </h6>
                                <p class="card-text">Review:<%= c.body %>
                                </p>
                                <% if(user && user.username===c.author.username){ %>
                                    <form
                                        action="/campgrounds/<%= campgrounds._id %>/reviews/<%= c._id %>?_method=DELETE"
                                        method="POST">

                                        <button class="btn btn-sm btn-danger">DELETE</button>
                                    </form>
                                    <% } %>
                            </div>

                        </div>
                        <%} %>



        </div>
    </div>